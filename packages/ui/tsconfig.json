{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "turbo",
    "../../apps/web-admin/app/org/[id]/organisation/_components/audiences-toolbar.tsx",
    "../../apps/web-admin/app/org/[id]/organisation/_components/audiences-tree.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
