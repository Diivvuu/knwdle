{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": ["src", "turbo"],
  "exclude": ["node_modules", "dist"]
}
