{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", "../../packages/ui/src/components/app/timezone-select.tsx", "../../packages/ui/src/components/app/country-select.tsx", "../../packages/ui/src/components/app/type-picker.tsx",
  ],
  "exclude": ["node_modules"]
}
