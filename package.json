{
  "name": "knwdle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "next": "15.3.4",
      "react": "19.1.0",
      "react-dom": "19.1.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "next": "15.3.4"
      }
    },
    "public-hoist-pattern": [
      "*"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.1.0",
    "@hookform/resolvers": "^5.2.2",
    "@reduxjs/toolkit": "^2.9.0",
    "@workspace/state": "workspace:*",
    "@workspace/ui": "workspace:*",
    "axios": "^1.12.2",
    "framer-motion": "^12.23.22",
    "jotai": "^2.15.0",
    "js-cookie": "^3.0.5",
    "libphonenumber-js": "^1.12.24",
    "lucide-react": "^0.475.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "sonner": "^2.0.7",
    "zod": "3.25.8"
  }
}