{
  "name": "knwdle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "next": "15.5.4",
      "react": "19.1.0",
      "react-dom": "19.1.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "next": "15.5.4"
      }
    },
    "public-hoist-pattern": [
      "*"
    ]
  }
}